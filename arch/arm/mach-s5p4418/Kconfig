config ARCH_CPU_SLSI
	bool
	default y
	select ARM_ERRATA_754322
	select ARM_ERRATA_775420

choice
	prompt "Prototype build mode"
	default S5P4418_PROTO_RELEASE

config  S5P4418_PROTO_RELEASE
	bool "Release"

config  S5P4418_PROTO_DEBUG
	bool "Debug"
endchoice

choice
	prompt "Memory max order"
	default S5P4418_MEM_MAX_ORDER_11

config	S5P4418_MEM_MAX_ORDER_11
	bool "4Mbyte"

config	S5P4418_MEM_MAX_ORDER_12
    bool "8Mbyte"

config	S5P4418_MEM_MAX_ORDER_13
	bool "16Mbyte"

endchoice

config FORCE_MAX_ZONEORDER
   	int
   	default 11 if S5P4418_MEM_MAX_ORDER_11
   	default 12 if S5P4418_MEM_MAX_ORDER_12
   	default 13 if S5P4418_MEM_MAX_ORDER_13

comment "CPU feature"

choice
	prompt "CPU Suspend"
	default SUSPEND_POWEROFF

	config SUSPEND_POWEROFF
		bool "Goto Power Off when Suspend"
		depends on SUSPEND

	config SUSPEND_IDLE
		bool "Goto idle when Suspend"
		depends on SUSPEND
endchoice

config CPU_S5P4418_SMP_ISR
	bool "Support multiple interrupt service routine"
	default y

config CPU_S5P4418_EX_PERI_BUS
	bool "Assign Exclusive Bus for IO"
	default y

config HAVE_PWM
	prompt "PWM driver"
	bool
	select NXP_PWM
	default y

config HAVE_PWM
	prompt "PWM driver"
	bool
	select NXP_PWM
	default y

config PWM_SYSFS
	bool "/sys/devices/platform/pwm.N (sysfs interface)"
	depends on HAVE_PWM
	default y

config HAVE_PWM_CH0
	bool "pwm 0"
	depends on HAVE_PWM
	default y

config HAVE_PWM_CH1
	bool "pwm 1"
	depends on HAVE_PWM
	default n

config HAVE_PWM_CH2
	bool "pwm 2"
	depends on HAVE_PWM
	default n

config HAVE_PWM_CH3
	bool "pwm 3"
	depends on HAVE_PWM
	default n

config NXP_PWM
	bool "Support PWM SoC"
	default y if HAVE_PWM

config NXP_DISPLAY
	bool "Support Display SoC"
	default n

config NXP_DISPLAY_1ST
	bool "Primary   display output (MLC0/DPC0)"
	depends on NXP_DISPLAY

config NXP_DISPLAY_2ST
	bool "Secondary display output (MLC1/DPC1)"
	depends on NXP_DISPLAY

config NXP_DISPLAY_RESCONV
	bool "Resolution Converter"
	depends on NXP_DISPLAY
	default n

config NXP_DFS_BCLK
    bool "DFS For BCLK"
    default n

choice
    prompt "Select BCLK PLL device"
    depends on NXP_DFS_BCLK
    default S5P4418_DFS_BCLK_PLL_0

config S5P4418_DFS_BCLK_PLL_0
    bool "PLL 0"

config S5P4418_DFS_BCLK_PLL_1
    bool "PLL 1"

endchoice

config ANDROID_PERSISTENT_RAM_CONS_AREA
    hex "RAM console physical hex address"
    depends on ANDROID_RAM_CONSOLE
    default 0x0

config ANDROID_PERSISTENT_RAM_CONS_SIZE
    int "RAM console size (KB)"
    depends on ANDROID_RAM_CONSOLE
    default 16

config PM_DBGOUT
	bool "Support PM_DBGOUT"
	default n

source "arch/arm/plat-s5p4418/Kconfig"

#------------------------------------------------ 
# falinux zeroboot boot configuration 
#------------------------------------------------ 
menu "Falinux zeroboot support" 

config FALINUX_ZEROBOOT
	bool "support falinux zeroboot"
	depends on ARCH_S5P4418
	---help---
	  No information. 

config FALINUX_ZEROBOOT_NAL
	bool "suppoet zeroboot nal"
	depends on FALINUX_ZEROBOOT
	---help---
	  No information. 

config  FALINUX_NAND_BBT_SURPORT
    bool "suppoet zeroboot nand bbt"
    depends on FALINUX_ZEROBOOT
    ---help---
      No information.

config  FALINUX_NAND_BBT_ROOTFS_SURPORT
    bool "suppoet zeroboot nand bbt for rootfs"
    depends on FALINUX_NAND_BBT_SURPORT
    ---help---
      No information.

choice
	prompt "FALINUX Board select"
	default CONFIG_ZEROBOOT_S5P4418
	depends on FALINUX_ZEROBOOT 

config ZEROBOOT_S5P4418
	bool	"NEXELL S5p4418"

config ZEROBOOT_MX6Q_SABREAUTO
	bool    "MX6q sabre auto Board" 

config ZEROBOOT_NXP5430
	bool	"NEXELL NXP5430"

endchoice 

config FALINUX_ZEROBOOT_MEM_STORAGE
	bool "suppoet zeroboot mem storage driver"
	depends on FALINUX_ZEROBOOT
	---help---
	  No information. 

endmenu 

